<h1 class="center">Flower List</h1>

<table class="table table-condensed">
  <thead>
    <tr>
      <th >Name</th>
      <th class="center">Cost</th>
      <th class="center">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @flowers.each do |flower| %>
      <tr>
        <td><%= flower.name %></td>
        <td class="center"><%= number_to_currency(flower.cost, precision: 2) %></td>
        <td class="center">
          <div class="btn-group">
            <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
              Action <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to 'Show', flower %></li>
              <li><%= link_to 'Edit', edit_flower_path(flower) %></li>
              <li><%= link_to 'Destroy', flower, method: :delete, data: { confirm: 'Are you sure?' } %></li>
            </ul>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

