<%= form_for(@flower) do |f| %>
  <% if @flower.errors.any? %>
    <div id="error_explanation" class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@flower.errors.count, "error") %> prohibited this flower from being saved:</h4>

      <ul>
      <% @flower.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label "Cost Per Flower" %>
    <%= f.text_field :cost, class: "form-control", 
        value: (number_with_precision(f.object.cost, precision: 2) || 0) %>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
